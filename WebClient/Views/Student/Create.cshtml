@model WebClient.Models.Studentet

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Create<small class="text-muted"> a new student</small></h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Emri" class="control-label"></label>
                <input asp-for="Emri" class="btn btn-default btn-toggle form-control shadow-sm mb-5 bg-white rounded" />
                <span asp-validation-for="Emri" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mbiemri" class="control-label"></label>
                <input asp-for="Mbiemri" class="btn btn-default btn-toggle form-control shadow-sm mb-5 bg-white rounded" />
                <span asp-validation-for="Mbiemri" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataLindjes" class="control-label"></label>
                <input asp-for="DataLindjes" class="btn btn-default btn-toggle form-control shadow-sm mb-5 bg-white rounded" type="datetime-local"/>
                <span asp-validation-for="DataLindjes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DrejtimiId" class="control-label"></label>
                @Html.DropDownList("DrejtimiId", new SelectList(ViewBag.Branches,
                    "Id", "Emri"),
                    new { @class = "btn btn-default btn-toggle form-control shadow-sm mb-5 bg-white rounded" })
                <span asp-validation-for="DrejtimiId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusiId" class="control-label"></label>
                @Html.DropDownList("StatusiId", new SelectList(ViewBag.Statuses,
                    "Id", "Name"),
                    new { @class = "btn btn-default btn-toggle form-control shadow-sm mb-5 bg-white rounded" })
                <span asp-validation-for="StatusiId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

